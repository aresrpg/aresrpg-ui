{
  "name": "@aresrpg/ui",
  "version": "0.9.4",
  "description": "Glassmorphism Vue 3 UI component library for AresRPG projects",
  "type": "module",
  "main": "./dist/aresrpg-ui.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/aresrpg-ui.umd.cjs"
    },
    "./style.css": "./dist/ui.css",
    "./*": "./dist/*"
  },
  "sideEffects": [
    "*.css",
    "*.vue"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "vite build --mode demo",
    "preview": "vite preview",
    "preview:demo": "vite preview --outDir dist-demo",
    "lint": "eslint . && prettier . --check",
    "format": "prettier . --write && eslint . --fix",
    "postversion": "git push --follow-tags",
    "prepare": "husky"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "lucide-vue-next": "^0.553.0",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "lucide-vue-next": "^0.553.0",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.1",
    "vue": "^3.4.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "keywords": [
    "vue",
    "vue3",
    "ui",
    "component-library",
    "glassmorphism",
    "aresrpg",
    "gaming"
  ],
  "author": "AresRPG",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aresrpg/aresrpg-ui.git"
  },
  "homepage": "https://github.com/aresrpg/aresrpg-ui#readme",
  "bugs": {
    "url": "https://github.com/aresrpg/aresrpg-ui/issues"
  },
  "dependencies": {
    "marked": "^17.0.0"
  }
}
