{
  "name": "@aresrpg/ui",
  "version": "0.8.9",
  "description": "Glassmorphism Vue 3 UI component library for AresRPG projects",
  "type": "module",
  "main": "./dist/aresrpg-ui.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/aresrpg-ui.umd.cjs"
    },
    "./style.css": "./dist/ui.css",
    "./*": "./dist/*"
  },
  "sideEffects": [
    "*.css",
    "*.vue"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "vite build --mode demo",
    "preview": "vite preview",
    "preview:demo": "vite preview --outDir dist-demo",
    "postversion": "git push --follow-tags"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "vue": "^3.3.0",
    "lucide-vue-next": "^0.553.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "vite": "^7.2.1",
    "vue": "^3.4.0",
    "lucide-vue-next": "^0.553.0"
  },
  "keywords": [
    "vue",
    "vue3",
    "ui",
    "component-library",
    "glassmorphism",
    "aresrpg",
    "gaming"
  ],
  "author": "AresRPG",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aresrpg/aresrpg-ui.git"
  },
  "homepage": "https://github.com/aresrpg/aresrpg-ui#readme",
  "bugs": {
    "url": "https://github.com/aresrpg/aresrpg-ui/issues"
  }
}
